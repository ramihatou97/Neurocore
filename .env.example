# ==================== Application ====================
APP_NAME=Neurosurgery Knowledge Base
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ==================== Database ====================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neurosurgery_kb
DB_USER=nsurg_admin
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# ==================== Redis Cache ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=optional_redis_password

# ==================== Authentication ====================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_256BIT_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ==================== AI Providers ====================

# OpenAI (required for embeddings and fallback)
OPENAI_API_KEY=sk-...

# Anthropic Claude (primary synthesis provider)
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (primary research provider)
GOOGLE_API_KEY=...

# ==================== External Research APIs ====================

# PubMed (optional but recommended)
PUBMED_EMAIL=your_email@example.com
# PUBMED_API_KEY=optional_for_higher_rate_limits

# Google Scholar (via SerpAPI or similar)
# SCHOLAR_API_KEY=optional

# ==================== File Storage ====================
PDF_STORAGE_PATH=/data/pdfs
IMAGE_STORAGE_PATH=/data/images

# ==================== Server Ports ====================
API_PORT=8000
FRONTEND_PORT=3000

# ==================== CORS Settings ====================
# Add your production domain when deploying
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
